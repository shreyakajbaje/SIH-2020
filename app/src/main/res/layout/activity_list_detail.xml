<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListDetail">


    <TextView
        android:id="@+id/title"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="583dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginRight="28dp"
        android:layout_marginLeft="13dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal"></TextView>


    <TextView
        android:id="@+id/location"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="539dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="13dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal"></TextView>

    <TextView
        android:id="@+id/exptext"
        android:layout_width="314dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="639dp"

        android:text="Please give your Feedback"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="31dp"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/fillexp"
        android:layout_width="298dp"
        android:layout_height="113dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="402dp"
        android:hint="Share Experience"
        android:textSize="19sp"
        android:layout_marginRight="46dp"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/fillsuggest"
        android:layout_width="297dp"
        android:layout_height="101dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="275dp"
        android:hint="Suggestions if any"
        android:textSize="19sp"
        android:layout_marginRight="43dp"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/submit"
        android:layout_width="127dp"

        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="54dp"
        android:text="Submit"
        android:layout_marginRight="121dp"
        android:layout_alignParentRight="true" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="199dp"

        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:layout_marginRight="54dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/fillrating"
        android:layout_width="246dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="121dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginRight="71dp"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal" />


</RelativeLayout>